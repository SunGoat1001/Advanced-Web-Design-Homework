<!DOCTYPE html>
<html>

<head>
  <title>Bai 5</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>Product List</h1>
  <a href="/product/add">Add New Product</a>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
    </tr>
    <% products.forEach(product=> { %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.description %>
        </td>
      </tr>
      <% }); %>
  </table>
</body>


</html>